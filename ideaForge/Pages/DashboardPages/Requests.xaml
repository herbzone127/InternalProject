<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ideaForge.Pages.DashboardPages"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="ideaForge.Pages.DashboardPages.Requests"
             mc:Ignorable="d" 
    xmlns:vm="clr-namespace:ideaForge.ViewModels"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <vm:RequestViewModel/>
    </UserControl.DataContext>
    <Grid>

        <mah:MetroTabControl>
            <TabItem  Header="Today's Requests" Background="#A9ABB1" >
                <Grid Background="#FFF">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="67*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid 
                   MouseDoubleClick="DataGrid_MouseDoubleClick"
                        ItemsSource="{Binding TodaysRequests,Mode=TwoWay}" 
                        AutoGenerateColumns="False"
                        CanUserSortColumns="True" 
                        Grid.ColumnSpan="2">
                        
                        <!--<DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.Resources>-->
                        <DataGrid.Columns>

                            <DataGridTemplateColumn  Header="Booking Id">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding id}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn  Header="UserName &amp; Contact">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run Text="{Binding contactNo}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn CanUserSort="True" Header="IF Dock">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <!--<Label Content="{Binding id}"/>-->
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn CanUserSort="True" Header="Date &amp; Time Slot" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding startDate}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn CanUserSort="True" Header="Status">
                                
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Background="{Binding color}" Padding="5">
                                            <Grid >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                </Grid.ColumnDefinitions>

                                                <Image Source="{Binding StatusImage}" Grid.Column="0" Height="10" Margin="5"/>
                                                <Label Content="{Binding status}" Foreground="{Binding TextColor}" Grid.Column="1"/>

                                            </Grid>

                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                                
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn CanUserSort="True" Header="Action">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button BorderBrush="Transparent" BorderThickness="0" Command="{Binding AcceptedCommand}" CommandParameter="{Binding .}">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="/Images/acceptIcon.png" />
                                                    <TextBlock Margin="5,0">Accept</TextBlock>
                                                </StackPanel>
                                            </Button>
                                            <Button BorderBrush="Transparent" BorderThickness="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="/Images/rejectIcon.png" />
                                                    <TextBlock Margin="5,0">Reject</TextBlock>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>


                        </DataGrid.Columns>
                        
                    </DataGrid>
                    
                </Grid>
            </TabItem>
            <TabItem Header="All Requests"  Background="#A9ABB1" >
                <Grid Background="#FFF">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="33*"/>
                        <ColumnDefinition Width="67*"/>
                    </Grid.ColumnDefinitions>
                    <DataGrid 
                   MouseDoubleClick="DataGrid_MouseDoubleClick"
                        ItemsSource="{Binding AllRequests,Mode=TwoWay}" 
                        AutoGenerateColumns="False"
                        CanUserSortColumns="True" 
                        Grid.ColumnSpan="2">
                        <!--<DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.Resources>-->
                        <DataGrid.Columns>

                            <DataGridTemplateColumn  Header="Booking Id">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding id}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn  Header="UserName &amp; Contact">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run Text="{Binding contactNo}"/>
                                        </TextBlock>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn CanUserSort="True" Header="IF Dock">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <!--<Label Content="{Binding id}"/>-->
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn CanUserSort="True" Header="Date &amp; Time Slot" >
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding startDate}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn CanUserSort="True" Header="Status">

                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="12" Background="{Binding color}" Padding="5">
                                            <Grid >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                </Grid.ColumnDefinitions>

                                                <Image Source="{Binding StatusImage}" Grid.Column="0" Height="10" Margin="5"/>
                                                <Label Content="{Binding status}" Foreground="{Binding TextColor}" Grid.Column="1"/>

                                            </Grid>

                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>

                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn CanUserSort="True" Header="Action">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button BorderBrush="Transparent" BorderThickness="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="/Images/acceptIcon.png" />
                                                    <TextBlock Margin="5,0">Accept</TextBlock>
                                                </StackPanel>
                                            </Button>
                                            <Button BorderBrush="Transparent" BorderThickness="0">
                                                <StackPanel Orientation="Horizontal">
                                                    <Image Source="/Images/rejectIcon.png" />
                                                    <TextBlock Margin="5,0">Reject</TextBlock>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>


                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </mah:MetroTabControl>
        <mah:ProgressRing
                    IsActive="{Binding IsBusy}" 
                    Foreground="#91C84F" 
                    />
    </Grid>
</UserControl>
