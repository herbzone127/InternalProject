                <DataGridTemplateColumn CanUserSort="False" Header="Flights Serviced" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
